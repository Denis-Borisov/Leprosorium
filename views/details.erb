<h4>Post details:</h4>

<br />
<p>
	<%= @row['content'] %>	
	<br />
	<br />
	Добавлен в <%= @row['created_date'] %>
</p>

<br />

<h4>Comments:</h4>

<br />
<% @comments.each do |comment| %>
	<p>
		<%= comment['content'] %>
		<br />
		<br />
		<span style="font-size: 75%; color: #999">Добавлен в <%= comment['created_date'] %></span>
	</p>
	<hr />
<% end %>


<p>
	<form action="/details/<%= @row['id'] %>" method="Post"> 
  		<textarea name="content" class="form-control" rows="6" placeholder="Введите текст комментария здесь"></textarea>
	    <br/>
  		<button type="submit" class="btn btn-info">Add comment</button>
	</form>

</p>